// Use .image-* classes for <img> elements. If possible, setting a
// background-image on a properly sized element would be better.
.image-2x
  display none

// Target HDPI and retina devices.
@media (-webkit-min-device-pixel-ratio: 1.3), (min-resolution: 124.8dpi)
  retina-bg-styles(path, bg-size)
    // Stylus has a built-in url() function we don't want to use.
    background-image unquote('url(../images/' + path + '-retina.png)')
    background-size bg-size auto

  .image-1x
    display none
  .image-2x
    display block

  // NOTE: For every background image, a selector should be written here
  // specifying the file path and width according to the convention above.
  .logo
    retina-bg-styles('html-logo', 32px)
